[Unit]
Description=Tennul VPN Backend Service
After=network.target wg-quick.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=root
WorkingDirectory=/opt/tennul-backend
Environment="RUST_LOG=info"
ExecStart=/opt/tennul-backend/tennul-backend
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target 